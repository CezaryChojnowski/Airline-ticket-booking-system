<Page x:Class="WPFClient.ChooseFrom"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFClient"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChooseFrom">

    <Grid>
        <Label Content="Wybierz kraj, z którego chcesz lecieć: " HorizontalAlignment="Left" Margin="144,124,0,0" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="357,124,0,0" VerticalAlignment="Top" Width="180" Height="26"/>
        <Label Content="Wybierz miasto, z którego chcesz lecieć: " HorizontalAlignment="Left" Margin="128,180,0,0" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="357,180,0,0" VerticalAlignment="Top" Width="180" Height="26"/>
        <Button Content="Dalej" HorizontalAlignment="Left" Margin="357,284,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
    </Grid>
</Page>
